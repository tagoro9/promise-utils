{
  "name": "@tagoro9/promise-utils",
  "version": "1.0.0",
  "description": "Set of utility functions to use when working with promises",
  "main": "lib/index.js",
  "repository": "https://github.com/tagoro9/promise-utils",
  "author": "Victor Mora",
  "license": "MIT",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@tagoro9/eslint-config-typescript": "1.0.0",
    "@types/conventional-commits-parser": "^3.0.0",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-typescript-sort-keys": "^0.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.2.1",
    "tsc-watch": "^4.2.3",
    "tscpaths": "^0.0.9",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc -p ./tsconfig.build.json && yarn fix-paths",
    "fix-paths": "tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "git:commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "git:pre-commit": "lint-staged",
    "lint": "eslint ./src --ext .ts",
    "test": "jest",
    "watch": "yarn clean && tsc-watch -w -p ./tsconfig.build.json --onSuccess \"yarn fix-paths\""
  },
  "engines": {
    "node": "^12.14.1",
    "npm": "^6.13.4",
    "yarn": "^1.21.1"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn git:commit-msg",
      "pre-commit": "yarn git:pre-commit"
    }
  },
  "dependencies": {

  }
}
